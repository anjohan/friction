region bottom_layer block INF INF INF INF 0 ${bottom_layer_thickness} units box
region bottom block INF INF INF INF ${bottom_layer_thickness} ${bottom_layer_thickness}+${bottom_thickness} units box
region top_layer block INF INF INF INF ${total_height}-${top_thickness} ${total_height} units box
region top_vacuum block INF INF INF INF ${total_height} INF units box

region sphere sphere ${xmid} ${ymid} ${sphere_centre_z} ${sphere_radius} units box
